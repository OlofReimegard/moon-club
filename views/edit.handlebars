<main>
    <h2 class ="goback">{{goback}}</h2>
    <h1 class="title">{{{title}}}</h1>
    <p class="description">{{description}}</p>
    <form class="reg-nav" method="post" action="/profile/edit">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <h2 class ="subtitle left-sub">First name</h2>
        <input class="left-input"  type="text" name="first" placeholder="first name" value="{{first}}">
        <h2 class ="subtitle left-sub">Last name</h2>
        <input class="left-input"  type="text" name="last" placeholder="last name" value="{{last}}">
        <h2 class ="subtitle left-sub">e-mail</h2>
        <input class="left-input"  type="email" name="email" placeholder="email" value="{{email}}">
        <h2 class ="subtitle left-sub">Password</h2>
        <input class="left-input"  type="password" name="password" placeholder="password">
        <h2 class ="subtitle left-sub">Age</h2>
        <input class="left-input"  type="number" name="age" placeholder="Age" value="{{age}}">
        <h2 class ="subtitle left-sub">City</h2>
        <input class="left-input"  type="text" name="city" placeholder="City" value="{{city}}">
        <h2 class ="subtitle left-sub">Homepage</h2>
        <input class="left-input"  type="text" name="url" placeholder="Homepage" value="{{url}}">
        <button type="submit" value="Submit">Submit</button>
    </form>
</main>
