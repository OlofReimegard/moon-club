<main>
    <h2 class ="goback">{{goback}}</h2>
    <h1 class="title">{{{title}}}</h1>
    <p class="description">{{description}}</p>
    <form method="post" action="/postsign">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <h2 class="subtitle left-sub">{{first}} {{last}}</h2>
        <canvas class="canvas" width="400px" height="100px"></canvas>
        <input class="user-sign" type="hidden" name="signature" value="">
        <button type="submit" value="Submit">Submit</button>
    </form>
</main>
